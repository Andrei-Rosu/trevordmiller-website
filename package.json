{
  "name": "trevordmiller-website",
  "scripts": {
    "dev": "next",
    "test": "jest",
    "lint": "eslint src",
    "build": "next build",
    "verify": "yarn test && yarn lint && yarn build",
    "start": "next start"
  },
  "babel": {
    "presets": [
      "latest",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/display-name": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  },
  "devDependencies": {
    "babel-jest": "^17.0.2",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "eslint": "^3.10.2",
    "eslint-plugin-react": "^6.7.1",
    "jest": "^17.0.3"
  },
  "dependencies": {
    "next": "^1.2.3"
  }
}

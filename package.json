{
  "name": "trevordmiller-website",
  "scripts": {
    "dev": "next",
    "verify": "npm run lint && npm run build",
    "lint": "eslint .",
    "format": "prettier --no-semi --single-quote --trailing-comma es5 --write '{components,pages,utils}/**/*.js'",
    "precommit": "npm run format",
    "build": "next build",
    "stage": "git checkout master && git pull && now",
    "release": "now alias",
    "start": "next start"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "react/display-name": "off",
      "react/prop-types": "off",
      "react/no-unescaped-entities": "off",
      "react/jsx-key": "off"
    }
  },
  "now": {
    "alias": "trevordmiller.com"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.0.1",
    "husky": "^0.14.3",
    "now": "^5.3.1",
    "prettier": "^1.5.3"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "next": "^2.4.1",
    "nova-colors": "^2.1.5",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-syntax-highlighter": "^5.6.2",
    "react-tabs": "^1.0.0",
    "rss": "^1.2.2"
  }
}

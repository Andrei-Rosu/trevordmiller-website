{
  "name": "trevordmiller-website",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "lint": "eslint pages components",
    "verify": "yarn lint && yarn build",
    "release": "git checkout master && git pull && now",
    "alias": "now alias $(pbpaste) trevordmiller.com"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "react/display-name": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "now": "^4.11.2"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "next": "^2.2.0",
    "nova-colors": "^2.1.5",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-lazy-load": "^3.0.12",
    "react-tabs": "^0.8.3"
  }
}

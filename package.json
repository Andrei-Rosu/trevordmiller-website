{
  "name": "trevordmiller-website",
  "scripts": {
    "dev": "next",
    "test": "jest",
    "lint": "eslint pages components",
    "build": "next build",
    "verify": "yarn test && yarn lint && yarn build",
    "start": "next start",
    "deploy": "git checkout master && git pull && now",
    "alias": "now alias $(pbpaste) trevordmiller.com"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "react/display-name": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^17.0.2",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "eslint": "^3.10.2",
    "eslint-plugin-react": "^6.7.1",
    "jest": "^17.0.3",
    "now": "^4.0.1"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "next": "^2.0.1",
    "nova-colors": "^2.1.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-tabs": "^0.8.2"
  }
}
